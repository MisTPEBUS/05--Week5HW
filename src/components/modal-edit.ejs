<div class="fixed z-10 overflow-y-auto top-0 w-full left-0 hidden shadow-lg" id="modal_edit">
    <div class="flex items-center justify-center min-height-100vh pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 transition-opacity">
            <div class="absolute inset-0 bg-gray-900 opacity-50"></div>
        </div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

        <div class="inline-block align-center bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full"
            role="dialog" aria-modal="true" aria-labelledby="modal-headline">

            <div class="no-scrollbar relative mx-auto max-h-[68vh] w-[480px] overflow-y-auto rounded-lg bg-white ">
                <div class="sticky top-0  bg-white font-lato border-b">
                    <div class="flex p-8">
                        <h2 class="text-24p font-bold">Edit Admin</h2>
                        <button onclick="toggleModalEdit()" class="close ml-auto text-gray-400 hover:text-gray-600">
                            <i class="material-icons  ">close</i>
                        </button>
                    </div>
                </div>
                <div class="pb-4 pl-8 pr-8">
                    <h3 class="pb-4 text-20p font-bold">Account</h3>
                    <div class="pb-4">
                        <label for="editName" class="text-14p">Name</label>
                        <input type="text" id="editName" class="h-[51px] w-full bg-gray-100 p-4" value="Emir Wicks" />
                    </div>
                    <div class="border-b pb-5">
                        <label for="editEmail" class="text-14p">Email</label>
                        <input type="email" id="editEmail" class="h-[51px] w-full bg-gray-100 p-4"
                            value="emir.wicks@mail.com" />
                    </div>
                    <h3 class="pb-5 pt-5 text-20p font-bold">Verification</h3>
                    <div class="flex items-center pb-4">
                        <span class="material-icons pr-2 text-primary"> check_circle </span>
                        <p class="font-bold">Verified</p>
                        <time datetime="2020/4/12" class="ml-auto text-14p text-text">2020/4/12</time>
                    </div>
                    <div class="border-b pb-5">
                        <a href="#"
                            class="flex h-[51px] cursor-not-allowed items-center justify-center border border-border-line text-[#CED4DA]">Send
                            Verification Mail</a>
                    </div>
                    <h3 class="pb-4 pt-5 text-20p font-bold">Access Level</h3>
                    <div class="border-b pb-5">
                        <select name="level" id="level" class="w-full border border-border-line p-4">
                            <option value="Admin" class="text-secondary">Admin</option>
                            <option value="-Choose access level-" class="text-secondary">
                                -Choose access level-
                            </option>
                        </select>
                    </div>
                    <h3 class="pb-5 pt-5 text-20p">Custom Access</h3>
                    <ul class="border-b pb-5">
                        <li class="pb-4">
                            <input type="checkbox" name="editLecture" id="editLecture" class="h-4 w-4" />
                            <label for="editLecture" class="pl-2 cursor-pointer">Lecture</label>
                        </li>
                        <li class="pb-4">
                            <input type="checkbox" name="editCoupon" id="editCoupon" class="h-4 w-4" />
                            <label for="editCoupon" class="pl-2 cursor-pointer">Coupon</label>
                        </li>
                        <li class="pb-4">
                            <input type="checkbox" name="editMessage" id="editMessage" class="h-4 w-4" />
                            <label for="editMessage" class="pl-2 cursor-pointer">Message</label>
                        </li>
                        <li class="pb-4">
                            <input type="checkbox" name="editSetting" id="editSetting" class="h-4 w-4" />
                            <label for="editSetting" class="pl-2 cursor-pointer">Setting</label>
                        </li>
                        <li class="pb-4">
                            <input type="checkbox" name="editTaskMenu" id="editTaskMenu" class="h-4 w-4" />
                            <label for="editTaskMenu" class="pl-2 cursor-pointer">Task Menu</label>
                        </li>
                    </ul>
                    <h3 class="pb-4 pt-5 text-20p">Deactivate Account</h3>
                    <div class="flex pb-4">
                        <span class="material-icons pr-2 text-danger"> warning </span>
                        <p class="text-danger">This cannot be undone!</p>
                    </div>
                    <div>
                        <button type="button"
                            class="flex h-[51px] w-full items-center justify-center border border-danger text-danger">
                            Deactivate This Account
                        </button>
                    </div>
                </div>

                <div class="sticky bottom-0 bg-white">
                    <div class="flex justify-end border-t border-border-line py-4 pr-8">
                        <button onclick="toggleModalEdit()" type="button"
                            class="py-1 px-8  bg-white border  border-primary  font-bold text-primary mr-4 h-[35px] w-[112px]">
                            Cancel
                        </button>
                        <button type="button"
                            class=" py-1 px-8  bg-primary border mb-4  font-bold text-white  h-[35px] w-[112px]">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleModalEdit() {
        document.getElementById('modal_edit').classList.toggle('hidden');
    }
</script>